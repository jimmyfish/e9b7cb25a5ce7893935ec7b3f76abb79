{% extends 'subLayout.html.twig' %}
{% block content %}
    <div class="content__header">
        <h2></h2>
    </div>
    <div class="card">
        <div class="card__header">
            <h2>Hapus Data User
                <small>Masukkan data sesuai yang dibutuhkan</small>
            </h2>
        </div>
        <div class="card__body">
            <div class="row">
                <div class="col-md-5">
                    <form action="" method="post">
                        <div class="form-group">
                            <label for="user-list">Pilih Pengguna yang terkait</label>
                            <select name="user-list[]" id="user-list" class="form-control" multiple>
                                {% for item in data['user'] %}
                                    <option value="{{ item.id }}">{{ item.nama }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <p class="pull-right">
                                <input type="submit" value="Proses" class="btn btn-primary">
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block customJS %}
    <script>
        $(function() {
            $('#user-list').select2();
        });
    </script>

{% endblock %}